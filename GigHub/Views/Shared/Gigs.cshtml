@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Home Page";
}
<h1>@Model.Heading</h1>
@using (Html.BeginForm("Search", "Gigs"))
{
    <div class"form-group">
        <div class="input-group" id="searchGigs">
            @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control" })
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i> 
            </span>
        </div>
        
    </div>
    
}
<ul class="gigs voffset4">
    @foreach (var gig in Model.UpComingGigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    
                        @gig.DateTime.ToString("MMM")
                    
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <div class="artist">
                    <a href="@Url.Action("Details", "Gigs", new {id = gig.Id})">
                        @gig.Artist.Name
                    </a>
                                        @if (gig.IsCanceled)
                                        {
                                            <span class="label label-warning">Canceled</span>
                                        }
                                        @if (Model.ShowActions)
                                        {
                                            <button data-artist-id="@gig.ArtistId" class="btn btn-link pull-right js-toggle-following">Follow Artist</button>
                                        }
</div>
                <div class="genre">
                    @gig.Genre.Name

                </div>
                @if (Model.ShowActions && gig.IsCanceled == false)
                {
                    <button data-gig-id="@gig.Id" class="btn 
                            @(Model.Attendances.Contains(gig.Id) ? "btn-info" : "btn-default") 
                            btn-sm pull-right js-toggle-attendance">Going?</button>
                }
            </div>
        </li>
    }
</ul>

@section scripts
{

    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("Attendance Change failed!");
                    });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $(".js-toggle-following").click(function (e) {
                var button = $(e.target);
                $.post("/api/following", { FolloweeId: button.attr("data-artist-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Following");
                    })
                    .fail(function () {
                        alert("Following Change failed!");
                    });
            });
        });
    </script>

}